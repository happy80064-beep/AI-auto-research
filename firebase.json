{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.log.*"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/generateResearchPlan",
        "function": "generateResearchPlan",
        "region": "us-central1"
      },
      {
        "source": "/api/refineResearchPlan",
        "function": "refineResearchPlan",
        "region": "us-central1"
      },
      {
        "source": "/api/analyzeTranscripts",
        "function": "analyzeTranscripts",
        "region": "us-central1"
      },
      {
        "source": "/api/generateProjectReport",
        "function": "generateProjectReport",
        "region": "us-central1"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
